<web-app>
    <servlet>
        <servlet-name>Surveyor</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Surveyor</servlet-name>
        <url-pattern>/surveyor/</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            dk.statsbiblioteket.doms.webservices.ConfigContextListener
        </listener-class>
    </listener>

    <context-param>
        <param-name>
            dk.statsbiblioteket.doms.surveillance.surveyor.urls
        </param-name>
        <param-value>
            http://localhost:8080/surveillance-surveyor.war/logsurveyservice/getStatusSince/{date}
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            dk.statsbiblioteket.doms.surveillance.surveyor.ignoredMessagesFile
        </param-name>
        <param-value>
            ignored.txt
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            dk.statsbiblioteket.doms.surveillance.surveyor.surveyorClass
        </param-name>
        <param-value>
            dk.statsbiblioteket.doms.surveillance.surveyor.RestSurveyor
        </param-value>
    </context-param>
</web-app>