<!-- This is a sample web.xml file, for what you need to put in your own web.xml
     file to enable the logsurveyservice. Please note that you also need to
     have Jersey deployed in the lib-directory of your war-file -->

<web-app>
    <servlet>
        <servlet-name>Log Survey Appender</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer
        </servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>dk.statsbiblioteket.doms.surveillance.rest
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Log Survey Appender</servlet-name>
        <url-pattern>/logsurveyservice/*</url-pattern>
    </servlet-mapping>
</web-app>