<!-- Global- and module specific libs -->
<project name="dependencies">

    <property name="global.dir" value="${basedir}"/>

    <fileset id="module.libs" dir="${basedir}/lib">
        <include name="**/jars/*.jar"/>
    </fileset>

    <fileset id="project.libs" dir="${global.dir}/lib">
        <exclude name="**"/>
    </fileset>


    <dirset id="module.dependencies" dir="${global.dir}/modules">
        <exclude name="**"/>
    </dirset>


    <fileset id="build.project.libs" dir="${global.dir}/lib">
        <exclude name="**"/>
    </fileset>








    <path id="rhino.classpath">
        <fileset dir="${global.dir}/build-libs/rhino/jars">
            <include name="*.jar"/>
        </fileset>
    </path>

    <target name="depends" depends="_predepends">
        <script language="javascript" classpathref="rhino.classpath" src="${global.dir}/dependsforloop.js"/>
        <antcall target="_postdepends"/>
        

    </target>

    <target  name="_postdepends"/>
    <target name="_predepends"/>





</project>